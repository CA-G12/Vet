{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["@typescript-eslint"],
    "extends": "standard-with-typescript",
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"], 
            "extends": [
              "plugin:@typescript-eslint/recommended",
              "plugin:@typescript-eslint/recommended-requiring-type-checking"
            ],
            "parserOptions": {
              "project": ["./tsconfig.json"]
            }
          }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    }
}
